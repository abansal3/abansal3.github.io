                    <?php 

                    //$contactInfo = array();    
                    
                        if (isset($_POST["guestName"])) {
                            $name = $_POST["guestName"];
                            
                            $_SESSION["Name"] = $name;
                            
                            mysqli_query($connection,"INSERT INTO contact (Name) VALUES ('$name')");
                            //$contactInfo[0] = $name;
                                                
                            header("Location: index.php");
                        }
                                        
                        if (isset($_POST["message"])) {
                            $message = $_POST["message"];
                            
                            $_SESSION["Message"] = $message;
                            
                            mysqli_query($connection,"UPDATE contact SET Message = '$message' WHERE Name = '$name'");
                            
                            //array_push($contactInfo,$message);
                            
                            header("Location: index.php");
                        }
                    
                        if (isset($_POST["Info"])) {
                            $info = $_POST["Info"];
                            
                            $_SESSION["Info"] = $info;
                                        
                            header("Location: index.php");
                        }
                    
                        if (isset($_SESSION["Info"])) {
                                
                                if ($_SESSION["Info"] == 1 && isset($_POST["Phone"]) && isset($_POST["Email"])) {
                                    $phone = $_POST["Phone"];

                                    $email = $_POST["Email"];
                                    
                                    //$sessionName = $contactInfo[0];
                                    
                                    //$sessionMessage = $contactInfo[1];

                                    mysqli_query($connection,"UPDATE contact SET Email = '$email', Phone = '$phone'");

                                    $_SESSION["Complete"] = "";
                                    
                                    header("Location: index.php");
                                    
                                    session_destroy();
                                }
                                
                            }

                    ?>